{
	"env": {
		"browser": true,
		"es6": true,
		"jest": true
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"extends": ["airbnb-base"],
	"rules": {
		"no-shadow": "off",
		"no-param-reassign": "off",
		"eol-last": "off",
		"quotes": ["error", "single"],
		// we want to force semicolons
		"semi": ["error'", "always"],
		// we use 2 spaces to indent our code
		"indent": ["error", 2],
		// we want to avoid useless spaces
		"no-multi-spaces": ["error"]
	},
	"ignorePatterns": ["dist/", "build/"]
}
